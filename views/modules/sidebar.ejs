<div class="sidebar">
  <div class="stay-fixed" style="position: sticky; top: 20px;">
  <i class="close-menu menu-icon" style="text-transform: uppercase; font-size: 12px; width: auto; padding: 0px 10px; font-style: normal; position: absolute; right: 20px; background: #fefefe;">X</i>
  <div class="header mb-5">
    <a href="/dashboard"><img src="/static/img/logo.png" alt="Packs logo" class="header-icon mb-2"></a>
    <p class="username" style="font-size:24px; margin-bottom: -3px;"><%= user.username %></p>
    <a href="/logout"><small>Sign out</small></a>
  </div>
  <div class="menu">
    <ul>
      <li>
        <a href="/dashboard">Dashboard</a>
      </li>
      <li>
        <a href="" class="inactiveLink">Your Packs</a>
        <ul class="pack-list">
          <% packs.forEach(function(pack){ %>
            <li><a href="/pack/<%= pack.id %>">
                <div class="pack"><%= pack.icon %> <%= pack.name %>
                </div>
              </a></li>
          <% }); %>

        </ul>
        <a href="/pack/new" style="opacity: 0.6;">+ Add New Pack</a>
      </li>
      <li>
        <a href="/profile">Profile</a>
      </li>
    </ul>
  </div>
  </div>
</div>
