<%- include('modules/head') -%>
<%- include('./modules/mobile-nav') -%>

  <div class="frame" style="width: 100%; height: 100%;">
    <%- include('./modules/sidebar') -%>

    <!-- MAIN BEGIN -->
    <div class="main">
      <section>
        <h1>Dashboard</h1>
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger"><%= error %></div>
        <%  } %>

        <div class="mt-3">
          <p style="opacity: 0.6;">Here are the latest posts from all of your packs.</p>
        </div>
        <hr class="w-100">
      </section>
      <section class="pt-0 mt-0">

        <% if (packs.length == 0) { %>
          <div class="card">
            <div class="card-body p-4">
            <h1 class="display-4" style="text-transform: none">Hello, <%= user.username %>!</h1>
            <p class="lead">It seems like you are not part of any Packs currently.</p>
            <hr class="my-4">
            <p style="opacity: 0.6;">Don't worry! Click here to create your own pack and invite your friends:</p>
            <a class="mt-2" style="font-weight: 500;" href="/pack/new" role="button">Create pack!</a>
            </div>
          </div>
        <%}%>

        <!-- FEED BEGIN -->
        <%- include('./modules/feed', {writer: false, type: "dash"}) -%>
        <!-- FEED End -->


      </section>
      <%- include('./modules/footer') -%>
    </div>
    <!-- MAIN END -->

  </div>
  <% if(typeof posts !== 'undefined') { %>
  <%-  include('./modules/feedAjax') -%>
  <% } %>
<%- include('./modules/scripts') -%>
  </script>
</body>

</html>
