<%- include('./modules/head') -%>

<body class="center-col p-3" style="min-height: 100vh;">

  <div class="logo-holder center-col mb-5" style="margin-top: auto;">
    <img src="/static/img/logo.png" alt="Packs Logo" style="max-width: 80px">
    <h1 class="text-center">PACKS</h1>
  </div>

  <div class="card center-col" style="max-width: 90%; width: 425px; padding: 30px 40px;">
    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger"><%= error %></div>
    <%  } %>
    <form method="POST" class="w-100">
      <div class="form-group">
        <input type="text" class="form-control" id="username" name="username" placeholder="Username">
      </div>
      <div class="form-group">
        <input type="email" class="form-control" id="email" name="email" placeholder="E-mail">
      </div>
      <div class="form-group mb-5">
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
      </div>
      <div class="form-group mb-0 center-col">
        <input type="submit" class="btn btn-primary w-100 mb-2" value="Register"/>
        <a href="/" class="w-100 text-center" style="opacity: 0.6;"><small>I already have a user.</small></a>
      </div>
    </form>
  </div>

<%- include('./modules/footer') -%>
<%- include('./modules/scripts') -%>
</body>

</html>
