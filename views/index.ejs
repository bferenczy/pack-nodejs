<%- include('./modules/head') -%>

<body class="center-col p-3" style="min-height: 100vh;">

  <div class="logo-holder center-col mb-5" style="margin-top: auto;">
    <img src="/static/img/logo.png" alt="Packs Logo" style="max-width: 80px">
    <h1 class="text-center">Packs</h1>

  </div>

  <div class="card center-col" style="max-width: 90%; width: 425px; padding: 30px 40px;">
    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger"><%= error %></div>
    <%  } %>

    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success"><%= success %></div>
    <%  } %>
    <form method="POST" class="w-100" autocomplete="on">
      <div class="form-group">
        <input type="email" class="form-control" name="email" id="email" placeholder="E-mail" >
      </div>
      <div class="form-group mb-5">
        <input type="password" name="password" class="form-control" id="password" placeholder="Password">
      </div>
      <div class="form-group mb-0 center-col">
        <input type="submit" class="btn btn-primary w-100 mb-2" value="Login"/>
        <a href="/register" class="btn btn-secondary w-100 mb-2">Register</a>
        <a href="/forgotten-password" class="w-100 text-center" style="opacity: 0.6;"><small>I forgot my password.</small></a>
      </div>
    </form>
  </div>

<%- include('./modules/footer') -%>

  <%- include('./modules/scripts') -%>
</body>

</html>
